# =============================================================================
# ElPatcher Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# =============================================================================
# Server Settings
# =============================================================================

# Host to bind the server (default: 0.0.0.0)
HOST=0.0.0.0

# Port to run the server (default: 8080)
PORT=8080

# Enable debug mode (default: false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# GitHub App Settings
# =============================================================================

# GitHub App ID (required)
GITHUB_APP_ID=

# GitHub App Private Key - provide ONE of these:
# Option 1: Private key content directly (with \n for newlines)
GITHUB_APP_PRIVATE_KEY=

# Option 2: Path to private key file
GITHUB_APP_PRIVATE_KEY_PATH=./private-key.pem

# Webhook secret for signature verification (recommended)
GITHUB_WEBHOOK_SECRET=

# =============================================================================
# LLM Provider Settings
# =============================================================================

# LLM provider: "claude" or "openai" (default: claude)
LLM_PROVIDER=claude

# Anthropic API key (required if LLM_PROVIDER=claude)
ANTHROPIC_API_KEY=

# Anthropic model (default: claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI API key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=

# OpenAI model (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Custom LLM API URL (optional, for proxies or self-hosted)
# LLM_API_URL=

# =============================================================================
# Agent Settings
# =============================================================================

# Maximum iterations for code fixes (default: 5)
MAX_ITERATIONS=5

